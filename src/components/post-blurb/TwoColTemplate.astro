---
import { Image } from '@astrojs/image/components';
import Title from '@components/Title.astro';
import DateTime from './DateTime.astro';

const { post } = Astro.props;
---

<div class="flex flex-col justify-between h-full">
  <Title title={post.title} subtitle={post.subtitle} />

  <div class="flex-1 grid grid-cols-2 gap-3 lg:gap-6 mb-3">
    <a class="block h-full" href={post.external_url || post.astro.url}>
      <Image
        class="max-h-[245px] w-auto border-2 border-accent-color border-opacity-80 hover:border-opacity-100 rounded"
        src={post.image_url}
        alt={`${post.title} ${post.subtitle}`}
        height="245"
        aspectRatio={post.image_ratio}
      />
    </a>
    <div
      class="flex flex-col justify-center lg:justify-start content font-bold w-full h-full"
    >
      <DateTime
        start={post.start_datetime}
        end={post.end_datetime}
        className="block text-center lg:text-left w-full"
      />
      <a class="block text-center lg:text-left w-full" href={post.location_url}>
        {post.location_display}
      </a>
    </div>
  </div>
  <div class="flex flex-col justify-end lg:justify-between h-full">
    <div
      class="hidden lg:block content font-base antialiased text-gray-700 leading-7 text-base sm:text-lg w-full"
    >
      {post.astro.source}
    </div>
    <a
      class="block font-base rounded antialiased text-gray-200 font-bold flex-none mt-3 bg-accent-color w-full text-lg bg-opacity-80 px-2 hover:bg-opacity-90"
      href={post.external_url}
    >
      Â» {post.more_display}
    </a>
  </div>
</div>
