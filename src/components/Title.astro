---
const {
  title = '',
  subtitle = false,
  center = false,
  id = '',
  border = false,
} = Astro.props;

const _id = id.length ? id : title;
---

<h2
  id={_id}
  class={`title  ${center ? 'justify-center' : ''} ${
    border ? 'border-b-3' : ''
  }`}
>
  <span
    class={`text-title  ${center && subtitle ? 'ml-3' : ''} ${
      subtitle ? 'mr-3' : ''
    } block ${center ? 'text-center' : ''}`}
  >
    {title}
  </span>
  <span
    class={`text-subtitle block ${center && subtitle ? 'ml-3' : ''} ${
      subtitle ? 'mr-3' : ''
    } ${center ? 'text-center' : ''}`}
  >
    {subtitle}
  </span>
</h2>
