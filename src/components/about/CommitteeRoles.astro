---

const { groups } = Astro.props;

---

<div class="content">
  <h3 class="text-shadow text-lg text-pink font-semibold">
    Board of Directors
  </h3>
  <ul>
    {
      groups['Board of Directors'].map((member) => (
        <li>
          <span class="underline">{member.role}:</span> {member.name}
        </li>
      ))
    }
  </ul>
</div>
