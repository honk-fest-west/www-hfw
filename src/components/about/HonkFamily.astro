---
import BackToTop from '@components/BackToTop.astro';
import Title from '@components/Title.astro';

const { family } = Astro.props;
---

<div id="family" class="grid grid-cols-1 gap-5">
  {
    Object.keys(family).map((region) => (
      <section class="content-container">
        <BackToTop />
        <Title title={`HONK! Family - ${region}`} center={true} />
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 sm:gap-7 w-full content my-4 sm:my-5">
          {family[region].map((honk) => (
            <a
              class="font-bold block w-full flex flex-col text-center items-center"
              href={honk.url}
            >
              <div class="block border-tertiary border-4 rounded-xl w-80 relative top-4 text-2xl transition ease-in-out hover:bg-tertiary hover:bg-opacity-100 hover:scale-105">
                <span class="inline-block relative bottom-4 bg-tertiary-dk px-2 rounded-xl bg-opacity-90 text-accent-lt">
                  {honk.name}
                </span>
              </div>
              <span class="block bg-tertiary-dk px-2 z-10 text-gray-200 rounded-xl bg-opacity-90">
                {honk.location}
              </span>
            </a>
          ))}
        </div>
      </section>
    ))
  }
</div>
