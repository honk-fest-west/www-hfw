---
 const { href } = Astro.props;


 const activeStyle = () => {
  return Astro.url.pathname.includes(href)
    ? "cursor-default rounded-full shadow-lg bg-button-active ring-button-active"
    : "hover:scale-105 focus:scale-100 hover:focus-within:bg-button-active hover:focus-within:ring-0 group-hover:group-focus-within:scale-100 rounded-full shadow-lg bg-button ring-gray-300";
};
---

<li
class=`hover:transition text-2xl sm:text-3xl font-title flex items-center my-2 ease-in py-2 px-2 mx-4 z-10 text-gray-200 ring-2 ${activeStyle()}`
>
<a
	class="mx-4 sm:mx-2 block ease-in"
	href={href}
>
	<slot />
</a>
</li>

<style>
	a {
  	text-shadow: -1px -1px 3px var(--color-button-shadow),
    	1px -1px 3px var(--color-button-shadow), -1px 1px 3px var(--color-button-shadow),
    	1px 1px 3px var(--color-button-shadow);
	}
</style>