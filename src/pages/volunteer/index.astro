---
import BaseLayout from '@layouts/BaseLayout.astro';
import Title from '@components/Title.astro';
import BackToTop from '@components/BackToTop.astro';

import volunteer_data from '@data/volunteer.json';
import FestivalVolunteer from '../../components/FestivalVolunteer.astro';

const positions = volunteer_data.positions;
---

<BaseLayout title="Volunteer">
  <div class="flex flex-wrap md:flex-nowrap gap-4 sm:gap-6">
    <div class="w-full md:w-1/3 grid grid-cols-1 gap-6 h-fit">
      <FestivalVolunteer />
      <div class="content-container">
        <Title title="Provide Housing" center={true} />
        <p class="content">
          Sign up to provide housing for HONK! Fest West out-of-town bands.
        </p>
        <a
          href="/volunteer/housing-form"
          class="text-shadow block font-base text-center rounded antialiased text-gray-200 font-bold flex-none mt-3 bg-navy w-full text-lg bg-opacity-80 px-2 hover:bg-opacity-90"
        >
          » SIGN UP HERE
        </a>
      </div>
    </div>
    <div class="w-full md:w-2/3 flex flex-col gap-4 sm:gap-6">
      <div class="content-container">
        <BackToTop />
        <Title title="HONK! Fest West" subtitle="NEEDS YOU!!!" />
        <p class="content">
          Below is a list of currently open roles in the HONK! Fest West
          Organization. There are positions of varying commitment to suit every
          level.
        </p>
      </div>

      {
        Object.keys(positions).map((position) => (
          <div class="content-container">
            <BackToTop />
            <Title title={position} />
            <p>{positions[position].description}</p>
            <a
              href={`/volunteer/committee-form?position=${position}`}
              class="text-shadow block font-base text-center rounded antialiased text-gray-200 font-bold flex-none mt-3 bg-navy w-fit text-lg bg-opacity-80 px-2 hover:bg-opacity-90"
            >
              » APPLY
            </a>
          </div>
        ))
      }
    </div>
  </div>
</BaseLayout>
