---
import BaseLayout from '@layouts/BaseLayout.astro'
import Image from '@components/Image.astro'

import emails from '@data/email-addresses.json' 
import committee from '@data/committee.json'

const committee_with_images = Object.keys(committee).filter(position => !!committee[position].image_url)
const committee_without_images = Object.keys(committee).filter(position => !committee[position].image_url)
---

<BaseLayout title="Contact">

	<!-- EMAIL ADDRESSES -->
	<div class="content-container mb-6 sm:mb-10">
		<dl class="mx-auto sm:w-2/3 lg:w-1/2  grid grid-cols-1 sm:grid-cols-2">
			{Object.keys(emails).map((email) => (
				<>
					<dt class="sm:p-2 font-base antialiased text-main-color-300 leading-7 text-lg sm:text-xl flex-1">{emails[email].name}:</dt>
					<dd class="content pb-2 sm:p-2 font-base antialiased text-main-color-300 leading-7 text-lg sm:text-xl">
						<a href={`mailto:${emails[email].email}`}>
							{emails[email].email}
						</a>
					</dd>
				</>
			))}
		</dl>
	</div>

	<!-- COMMITTEE -->
	<h2 class="text-3xl sm:text-4xl text-main-color-900 text-center tracking-wide mb-8 font-bold">
		YOUR
		<span class="text-accent-color">HONK! FEST WEST</span>
		COMMITTEE
	</h2>
	<div class="flex flex-wrap justify-around gap-6 sm:gap-12">
		{committee_with_images.map((position) => (
			<div class="w-[184px] flex flex-col items-center">
				<Image 
					className="rounded-full h-36 mb-2 border-[.5rem] border-main-color-900" 
					src={committee[position].image_url} alt={committee[position].name}
					width="150"
					height="150"
				/>
				<h3 class="text-2xl uppercase text-main-color-900 text-center font-bold">{position}</h3>
				<p class="content text-center "><span class="text-accent-color font-bold">{committee[position].name}</span></p>
			</div>
		))}
	</div>
	<div class="flex flex-wrap justify-around gap-6 sm:gap-12 mt-6 sm:mt-12">
		{committee_without_images.map((position) => (
			<div class="w-[184px] flex flex-col items-center">
				<h3 class="font-bold text-2xl uppercase text-main-color-900 text-center">{position}</h3>
				<p class="content text-center "><span class="text-accent-color font-bold">{committee[position].name}</span></p>	
			</div>	
		))}
	</div>

</BaseLayout>