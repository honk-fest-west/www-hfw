---
import BaseLayout from '@layouts/BaseLayout.astro';
import Title from '@components/Title.astro';
import BackToTop from '@components/BackToTop.astro';
import MarkdownContent from '@components/MarkdownContent.astro';
import { rawContent as info } from './_info.md';

---

<BaseLayout title="Donate">
  <div class="flex flex-wrap md:flex-nowrap gap-4 sm:gap-6">
    <div class="w-full md:w-1/3 flex flex-col gap-5">
      <div class="content-container">
        <div class="flex flex-col items-center gap-y-5 my-2">
          <a
            href="https://venmo.com/honkfestwest"
            class="text-shadow flex md:hidden items-center mb-1 py-3 px-5 rounded-full bg-navy"
          >
            <img
              src="https://cdn1.venmo.com/marketing/images/branding/venmo-icon.svg"
              alt=""
              width="100"
              height="100"
              class="w-6 mr-2"
            />
            <span class="block text-lg content text-white"
              >Donate with Venmo</span
            >
          </a>
          <a
            href="https://www.paypal.com/donate/?hosted_button_id=EE2WLALDX9GCA"
            class="text-shadow flex items-center py-3 px-5 rounded-full transition ease-in-out hover:scale-105 bg-navy"
          >
            <i class="paypal mr-2"></i>
            <span class="block text-lg content">Donate with PayPal</span>
          </a>
          <p class="content text-center text-sm">Or securely at:</p>
          <a
            href="https://connect.clickandpledge.com/w/Form/a6086a7f-ef18-4eb8-a2bc-ffa205759fcc"
            class="text-shadow flex items-center py-3 px-5 rounded-full transition ease-in-out hover:scale-105 bg-navy"
          >
            <p class="block content font-blackrounded-full px-3">
              <span class="text-white text-2xl">CLICK</span>
              <span class="text-[#ff7333] text-2xl -rotate-45 inline-block"
                >&</span
              >
              <span class="text-white text-2xl">PLEDGE</span>
            </p>
          </a>
        </div>
      </div>
      <div class="content-container flex flex-col items-center">
        <Title title="#GivingTuesday" />
        <iframe
          title="Donate to Honk Fest West"
          width="300"
          height="500"
          src="https://www.wagives.org/forms/honk-fest-west?id=ajcqcf&embed=donation_widget"
          scrolling="no"
          marginHeight="0"
          marginWidth="0"
          frameBorder="0"></iframe>
      </div>
    </div>
    <div class="w-full md:w-2/3">
      <div class="content-container">
        <BackToTop />
        <MarkdownContent md={info()} />
      </div>
    </div>
  </div>
</BaseLayout>
