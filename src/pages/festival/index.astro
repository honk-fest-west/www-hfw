---
import Head from '@components/base-head/BaseHead.astro';
import FestivalApp from '@components/festival/FestivalApp.svelte';

import schedule from './_schedule.toml';
import bands from './_bands.toml';
import stages from './_stages.toml';
import logoImg from '/src/images/logos/2023-logo-white.png';

const mapImgs = await Astro.glob('/src/images/map/*').then((files) =>
  files.map((file) => file.default)
);

const bandImgs = await Astro.glob('/src/images/bands/*').then((files) =>
  files.map((file) => file.default)
);
---

<!DOCTYPE html>
<html lang="en" class="h-full overflow-hidden">
  <!-- HEAD -->
  <head>
    <Head title="HONK! 2023" />
  </head>

  <body class="h-full overflow-hidden">
    <div style="display: contents" class="h-full overflow-hidden">
      <FestivalApp
        client:load
        bands={bands}
        schedule={schedule}
        stages={stages}
        logoImg={logoImg}
        mapImgs={mapImgs}
        bandImgs={bandImgs}
      />
    </div>
  </body>
</html>
