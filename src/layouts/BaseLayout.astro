---
import Head from '@components/base-head/BaseHead.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import BackgroundImage from '@components/BackgroundImage.astro';
import nav from './_nav.toml'
import footer from './_footer.toml'
import social from './_social.toml'

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <!-- HEAD -->
  <head>
    <Head title={title}>
      <slot name="head" />
    </Head>
  </head>

  <body class="min-h-full">
    <div id="back-to-top"></div>

    <!-- BACKGROUND IMAGE -->
    <div class="w-full h-full fixed top-0 left-0">
      <div class="bg-aqua w-full h-full fixed top-0 left-0"></div>
      <BackgroundImage />
      <!-- <div class="bg-site  w-full h-full fixed top-0 left-0"></div> -->
    </div>

    <div
      class="w-full h-full absolute top-0 left-0 flex flex-col justify-between"
    >
      <!-- HEADER -->
      <header class="w-full mx-auto">
        <Header nav={nav} social={social} />
      </header>

      <!-- MAIN -->
      <main class="max-w-screen-xl pb-6 sm:pb-10 px-3 sm:px-6 w-full mx-auto">
        <slot />
      </main>

      <!-- FOOTER -->
      <footer class="mt-auto w-full">
        <Footer supporters={footer.supporters} social={social} />
      </footer>
    </div>
  </body>
</html>
