---
import {Markdown} from 'astro/components'
import BaseLayout from '@layouts/BaseLayout.astro'
import Title from '@components/Title.astro'
import Image from '@components/Image.astro'
import FestivalVolunteer from '@components/FestivalVolunteer.astro'

const {title, active} = Astro.props

const isActive = (key) => key === active ? 'active' : ''
---

<style>
	.menu a {
		@apply block bg-accent-color rounded text-xl text-gray-200 mb-5 last:mb-0 font-base font-bold py-2 bg-opacity-70 px-4
	}
	.menu a.active {
		@apply bg-opacity-100
	}
</style>

<BaseLayout title={title}>
	<div class="flex flex-wrap md:flex-nowrap gap-4 sm:gap-6">
		<div class="w-full md:w-1/3 flex flex-col gap-4">
			<nav class="content-container">
				<div class="menu sticky">
					<a class="button" href="#locations">» Locations</a>
					<a class="button" href="https://fb.me/e/1Uo9pDz4E">» <span class="w-24 inline-block">Thurs</span><span class="w-28 inline-block text-center">HONKANO!</span></a>
					<a class="button" href="#friday">» <span class="w-24 inline-block">Friday</span><span class="w-28 inline-block text-center">((6|3))</span></a>
					<a class="button" href="#saturday">» <span class="w-24 inline-block">Saturday</span><span class="w-28 inline-block text-center">&nbsp;/6|4\</span></a>
					<a class="button" href="#sunday">» <span class="w-24 inline-block">Sunday</span><span class=" w-28 inline-block text-center">---6|5---</span></a>
					<a class="button" href="#bands">» Bands</a>
				</div>
			</nav>
		</div>
		<div class="w-full md:w-2/3">
			<slot/>
		</div>
	</div>
</BaseLayout>