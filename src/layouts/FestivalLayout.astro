					<a class={isActive('bands')} href="/festival#bands">» Bands</a>
				</div>
			</div> -->
			<FestivalVolunteer/>
		</div>
		<div class="w-full md:w-2/3">
			<slot/>
		</div>
	</div>
</BaseLayout>