---
import BaseLayout from './BaseLayout.astro'
import PostBlurb from '@components/post-blurb/PostBlurb.astro'

const { content } = Astro.props;
---

<BaseLayout title={`${content.title} ${content.subtitle}`}>
	<div class="content-container grid grid-cols-6 gap-4 sm:gap-6">
		<article class="w-full content-container sm:col-span-6 md:col-span-6">
			<PostBlurb post={content} cols={3} />
		</article>
	</div>
</BaseLayout>