---
import "@styles/tailwind.css";
import HeadOpenGraph from "@components/head/OpenGraph.astro";
import Header from "@components/Header.astro";

const { title = false } = Astro.props;

const fullTitle = title ? `${title} - HONK! Fest West` : "HONK! Fest West";
---

<!doctype html>
<html lang="en" class="h-full scroll-smooth bg-site-background">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{fullTitle}</title>
    <HeadOpenGraph></HeadOpenGraph>
	</head>

  <body class="flex min-h-full">
		<div class="flex flex-col w-full">

			<div id="back-to-top"></div>

      <!-- HEADER -->
      <header class="relative flex-none">
        <Header></Header>
      </header>

      <!-- MAIN -->
      <main class="flex-auto bg-main-background pt-10">
        <div class="max-w-screen-xl mx-auto w-full px-6">
          <slot />
        </div>
      </main>

      <!-- FOOTER -->
      <footer class="mt-auto w-full">
        <!-- <Footer supporters={footer.supporters} social={social} /> -->
      </footer>
    </div>
  </body>
</html>


